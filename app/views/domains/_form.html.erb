<%= form_with(model: domain) do |form| %>
  <%= render 'layouts/errors', model: domain %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :path, style: "display: block" %>
    <%= form.text_field :path %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
