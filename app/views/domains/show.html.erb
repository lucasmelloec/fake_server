<p style="color: green"><%= notice %></p>

<%= render @domain %>

<div>
  <%= link_to "Edit this domain", edit_domain_path(@domain) %> |
  <%= link_to "Back to domains", domains_path %>

  <%= button_to 'Destroy this domain', @domain,
    method: :delete,
    form: {
      data: { confirm: 'Are you sure?'}
    }
  %>
</div>

<h2>Expectations</h2>
<%= render @domain.expectations %>

<h2>Add an expectation:</h2>
<%= render 'expectations/form', domain: @domain, expectation: @expectation %>
